<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Farms List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
  </head>
  <body style="background-color: darkcyan; color: aliceblue">
    <div class="container">
      <h2
        class="display-3 mx-auto"
        style="max-width: 400px; text-align: center"
      >
        Farms
      </h2>

      <ul id="list">
        <% for(var farm of farms) { %>
        <div class="row m-3 bg-primary" style="text-align: center">
          <div id="farm_name" class="col-3 m-2"><%= farm.name %></div>
          <div id="farm_price" class="col-2 m-2"><%= farm.city %></div>
          <div id="farm_price" class="col-3 m-2"><%= farm.email %></div>
          <div class="col-2">
            <a
              style="color: white; text-decoration: none"
              href="/farms/<%= farm.id %>"
              id="details_btn"
              class="btn btn-outline-dark m-2"
              >Details</a
            >
          </div>
          <div class="col-2">
            <a href="/farm/products" class="btn btn-success m-2">Products</a>
          </div>
        </div>
        <% } %>
      </ul>
      <div class="d-grid col-4 mx-auto">
        <a href="/farm/add" id="add_btn" class="btn btn-dark">Add Farm</a>
      </div>
    </div>
  </body>
</html>
